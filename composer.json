    "keywords": ["zarinpal", "payment", "laravel", "framework"],
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
      "php": "^7.4|^8.0",
      "guzzlehttp/guzzle": "^7.2.0",
      "ext-json": "*"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zarinpal\\ZarinpalServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Zarinpal\\": "src/"
        }
    }
}
